{
  "name": "hexagonal-architecture-tasks",
  "version": "0.0.1",
  "description": "App to manage tasks using hexagonal architecture using NestJS framework.",
  "author": "https://github.com/rafasoyyo",
  "private": true,
  "license": "UNLICENSED",
  "bin": {
    "hex": "dist/apps/cli/main.js"
  },
  "scripts": {
    "build": "nest build --all",
    "format": "prettier --write \"apps/**/*.ts\" \"src/**/*.ts\"",
    "start": "nest start",
    "start:cli": "nest start cli -- ",
    "start:api": "nest start api --watch -b swc",
    "start:web": "nest start web --watch -b swc",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --roots ./apps/api/test/ ./apps/cli/test/",
    "test:unit": "jest --roots ./apps/api/src/ ./apps/cli/src/"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "moment": "^2.30.1",
    "mongoose": "^8.18.1",
    "mysql2": "^3.14.5",
    "nest-commander": "^3.19.1",
    "pg": "^8.16.3",
    "pug": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nest-commander-testing": "^3.5.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "^@task(|/.*)$": "<rootDir>/src/contexts/task/$1",
      "^@shared(|/.*)$": "<rootDir>/src/shared/$1"
    }
  }
}
